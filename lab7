#include <stdio.h>
#include <string.h>

#define MAX_NAME_LENGTH 50
#define NUM_HUMANS 4

typedef struct {
    char first_name[MAX_NAME_LENGTH];
    char last_name[MAX_NAME_LENGTH];
    int birth_year;
} Human;

int main() {
    Human first_array[NUM_HUMANS];
    Human second_array[NUM_HUMANS];

    printf("Введите данные для первого массива (имя, фамилия, год рождения):\n");
    for (int i = 0; i < NUM_HUMANS; i++) {
        printf("Человек %d: ", i + 1);
        scanf("%s %s %d", first_array[i].first_name, first_array[i].last_name, &first_array[i].birth_year);
    }

    // Сортировка по году рождения
    for (int i = 0; i < NUM_HUMANS; i++) {
        for (int j = i + 1; j < NUM_HUMANS; j++) {
            if (first_array[i].birth_year > first_array[j].birth_year) {
                Human temp = first_array[i];
                first_array[i] = first_array[j];
                first_array[j] = temp;
            }
        }
    }

    // Копирование отсортированных данных во второй массив
    for (int i = 0; i < NUM_HUMANS; i++) {
        second_array[i] = first_array[i];
    }

    printf("\nОтсортированный массив по году рождения:\n");
    for (int i = 0; i < NUM_HUMANS; i++) {
        printf("%s %s %d\n", second_array[i].first_name, second_array[i].last_name, second_array[i].birth_year);
    }

    return 0;
}
 
 
